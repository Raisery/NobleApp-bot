{
	"name": "noblebot",
	"version": "1.0.7",
	"description": "A complete Node.js Discord bot",
	"keywords": [
		"typescript",
		"discord",
		"bot"
	],
	"author": {
		"name": "Lucas GÃ©rard",
		"url": "https://lucas-gerard-pro.com",
		"email": "lucas1.gerard@gmail.com"
	},
	"license": "BSD-3-Clause",
	"repository": {
		"type": "git",
		"url": "https://github.com/raisery/node-NobleBot.git"
	},
	"main": "dist/index.js",
	"types": "dist/index.d.ts",
	"files": [
		"dist/"
	],
	"scripts": {
		"build": "npm run clean && npm run lint && tsc",
		"changelog": "conventional-changelog -p angular -u",
		"changelog:update": "conventional-changelog -p angular -i CHANGELOG.md -s && git add CHANGELOG.md",
		"clean": "node -e \"var { rmdirSync, existsSync } = require('fs'), path = require('path'); ['./.nyc_output', './coverage', './dist'].forEach(fPath => {if (existsSync(path.join(__dirname, fPath))) rmdirSync(path.join(__dirname, fPath), { recursive: true })}); process.exit(0);\"",
		"clean:all": "npm run clean && (rm -r ./node_modules || true)",
		"cover": "nyc npm run test",
		"cover:check": "nyc --check-coverage --reporter=lcov npm run test",
		"lint": "eslint --ext .ts --fix src/**/*.ts test/**/*.ts",
		"preversion": "npm run build && npm run cover:check",
		"postversion": "git push && git push --tags",
		"prepare": "npm run build",
		"serve": "nodemon ./src/index.ts",
		"test": "mocha",
		"upgrade": "npx npm-check -u",
		"version": "npm run build && npm run changelog:update"
	},
	"devDependencies": {
		"@types/chai": "^4.3.5",
		"@types/mocha": "^10.0.1",
		"@types/node": "^20.4.1",
		"@typescript-eslint/eslint-plugin": "^5.61.0",
		"@typescript-eslint/parser": "^5.61.0",
		"chai": "^4.3.7",
		"conventional-changelog-cli": "^3.0.0",
		"cz-conventional-changelog": "^3.3.0",
		"eslint": "^8.44.0",
		"mocha": "^10.2.0",
		"nodemon": "^3.0.1",
		"nyc": "^15.1.0",
		"prisma": "^5.13.0",
		"source-map-support": "^0.5.21",
		"ts-node": "^10.9.1",
		"typescript": "^5.1.6"
	},
	"config": {
		"commitizen": {
			"path": "./node_modules/cz-conventional-changelog"
		}
	},
	"dependencies": {
		"@discordjs/opus": "^0.9.0",
		"@discordjs/voice": "^0.16.1",
		"@prisma/client": "^5.13.0",
		"chalk": "^4.1.2",
		"dayjs": "^1.11.11",
		"discord.js": "^14.14.1",
		"dotenv": "^16.4.5",
		"dotenv-cli": "^7.4.1",
		"ffmpeg": "^0.0.4",
		"ffmpeg-static": "^5.2.0",
		"sitka": "^1.1.1",
		"tweetnacl": "^1.0.3"
	}
}
